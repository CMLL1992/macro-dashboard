# ============================================
# VARIABLES DE ENTORNO - MACRO DASHBOARD
# ============================================
# Copia este archivo a .env.local y completa los valores
# NUNCA subas .env.local a Git (está en .gitignore)

# ============================================
# OBLIGATORIAS PARA PRODUCCIÓN
# ============================================

# API Key de FRED (Federal Reserve Economic Data)
FRED_API_KEY=your_fred_api_key_here

# Token para autenticar endpoints de jobs (/api/jobs/*)
CRON_TOKEN=your_cron_token_here

# Clave secreta para proteger endpoints de ingesta
INGEST_KEY=your_ingest_key_here

# URL base de la aplicación
APP_URL=http://localhost:3000

# ============================================
# BASE DE DATOS (Turso)
# ============================================

# URL de la base de datos Turso (opcional, si no se usa SQLite local)
TURSO_DATABASE_URL=libsql://tu-db.aws-eu-west-1.turso.io

# Token de autenticación de Turso
TURSO_AUTH_TOKEN=tu_turso_auth_token_here

# ============================================
# TELEGRAM (Opcional)
# ============================================

TELEGRAM_BOT_TOKEN=tu_telegram_bot_token
TELEGRAM_CHAT_ID=tu_telegram_chat_id
TELEGRAM_TEST_CHAT_ID=tu_telegram_test_chat_id
ENABLE_TELEGRAM_NOTIFICATIONS=false
ENABLE_TELEGRAM_TESTS=false

# ============================================
# API KEYS EXTERNAS (Opcional)
# ============================================

TRADING_ECONOMICS_API_KEY=tu_trading_economics_api_key
ALPHA_VANTAGE_API_KEY=tu_alpha_vantage_api_key
COINMARKETCAP_API_KEY=tu_coinmarketcap_api_key

# ============================================
# CONFIGURACIÓN DE ENTORNO
# ============================================

NODE_ENV=development
TIMEZONE=Europe/Madrid

# ============================================
# FEATURE FLAGS (Opcional)
# ============================================

USE_LIVE_SOURCES=false
USE_MESSAGE_QUEUE=true
ENABLE_DAILY_DIGEST=false
ENABLE_WEEKLY_SCHEDULER=true
DEBUG_INDICATORS=false
DEBUG_DASHBOARD=false
DRY_RUN_TELEGRAM=false
BYPASS_RATE_LIMIT_FOR_TESTS=false

# ============================================
# RATE LIMITS (Opcional)
# ============================================

GLOBAL_RATE_LIMIT_PER_MIN=30
CHAT_RATE_LIMIT_PER_MIN=5

# ============================================
# TIMEOUTS (Opcional)
# ============================================

MACRO_FETCH_TIMEOUT_MS=8000
MACRO_DEFAULT_REVALIDATE_HOURS=6

# ============================================
# CRON (Opcional)
# ============================================

WEEKLY_CRON=Sunday 18:00

# ============================================
# SEGURIDAD (Opcional)
# ============================================

SETTINGS_ENC_KEY=tu_settings_encryption_key
DASHBOARD_ADMIN_TOKEN=tu_admin_token
